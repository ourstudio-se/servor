{
  "name": "servor",
  "version": "4.0.2",
  "description": "A dev server for single page app development",
  "repository": "lukejacksonn/servor",
  "main": "./src/index.ts",
  "bin": {
    "servor": "./cli.js"
  },
  "keywords": [
    "server",
    "spa"
  ],
  "scripts": {
    "build": "pika build",
    "prebuild": "npm run clean",
    "build:tsc": "tsc",
    "prebuild:tsc": "npm run clean",
    "clean": "rimraf ./pkg",
    "prepare": "npm run type-check",
    "type-check": "tsc --noEmit --skipLibCheck",
    "version": "npm run build",
    "start": "sudo npm run build && node cli tests index.html 5000"
  },
  "author": "Luke Jackson <lukejacksonn@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/node": "^14.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.3"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "@types/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  }
}
